{
  "manifest_version": 3,
  "name": "QuickAI Summary For Articles",
  "version": "1.0",
  "description": "AI-driven tool that creates concise summaries of online articles.",

  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "tabs"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "options_page": "options.html"
}
